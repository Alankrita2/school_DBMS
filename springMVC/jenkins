pipeline{
    agent any
    stages{
        stage("compilePhase"){
            steps{
                bat "cd springMVC"
                bat "mvn compile"
            }
        }

        stage("testPhase"){
            steps{
                bat "cd springMVC"
                bat "mvn test"
            }
        }

        stage("packagingPhase"){
            steps{
                bat "cd springMVC"
                bat "mvn clean package"
            }
        }
    }
}